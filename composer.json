{
    "name": "erwane/cakephp-mailer",
    "description": "Extend CakePHP with PHPMailer library",
    "type": "cakephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Erwane Breton",
            "email": "erwane@phea.fr",
            "homepage": "https://phea.fr/"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "phpmailer/phpmailer": "~5.0",
        "cakephp/cakephp": "~3.4"
    },
    "require-dev": {
        "cakephp/debug_kit": "~3.2",
        "phpunit/phpunit": "6.*",
        "phpro/grumphp": "^0.11.3",
        "cakephp/cakephp-codesniffer" : "dev-master",
        "jakub-onderka/php-parallel-lint": "^0.9.2"
    },
    "autoload": {
        "psr-4": {
            "CakePhpMailer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CakePhpMailer\\Test\\": "tests"
        }
    }
}
